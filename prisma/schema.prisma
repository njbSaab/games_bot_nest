datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Resource {
  id        Int      @id @default(autoincrement())
  name      String
  url       String   @unique
  type      String // static, mailer, telegram
  interval  Int
  frequency Int?
  period    String?
  userId    String
  headers   Json?
  createdAt DateTime @default(now())
  logs      Log[]
}

model Log {
  id         Int      @id @default(autoincrement())
  resourceId Int
  resource   Resource @relation(fields: [resourceId], references: [id])
  status     String
  response   String?
  endpoint   String?
  duration   Int?
  result     Boolean // true (успех), false (ошибка)
  createdAt  DateTime @default(now())
}
